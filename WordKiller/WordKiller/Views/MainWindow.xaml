                            <TextBlock Grid.Row="3" Grid.Column="0" Margin="0 0 3 10" TextAlignment="Right" FontSize="{Binding Path=FontSize,Mode=TwoWay,Converter={StaticResource fontConverter},ConverterParameter=16}" Text="{DynamicResource Shifr}" Style="{StaticResource TextBlock}"/>
                            <TextBox x:Name="ShifrCoop" Grid.Row="3" Grid.Column="1" Margin="0 0 0 10" FontSize="{Binding Path=FontSize,Mode=TwoWay,Converter={StaticResource fontConverter},ConverterParameter=14}" TextChanged="ShifrCoop_TextChanged" Style="{StaticResource TextBoxRounded}"/>
