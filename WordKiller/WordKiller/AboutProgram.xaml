<Window x:Class="WordKiller.AboutProgram"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WordKiller"
        mc:Ignorable="d"
        Title="О программе" ResizeMode="NoResize" Height="200" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="35*"/>
            <ColumnDefinition Width="45*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
        </Grid.RowDefinitions>
        <Image Grid.Column="0" Margin="10,10,5,5" Grid.Row="0" Source="/512x512.png" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Column="1" Grid.Row="0" FontSize="60" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.ColumnSpan="2" Text="WordKiller" FontWeight="Bold"/>
        <GroupBox Margin="5" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Header="Информация о продукте">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50*"/>
                    <ColumnDefinition Width="50*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Text="Программа написана на языке C#"/>
                <TextBlock Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Text="Интерфейс сделан на WPF"/>
                <TextBlock Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" Text="Версия продукта: 1.1"/>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
